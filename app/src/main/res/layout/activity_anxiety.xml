<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#88BBBE"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:text="What is Anxiety Disorder?"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_below="@id/imageView13" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:text="When individuals feel restless or accelerated worry. Anxiety could become a panic disorder which can include phobias or post traumatic stress disorder(PTSD)."
            android:textSize="12sp"
            android:layout_below="@id/textView2"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:text="--> Panic disorders are sudden episodes of anxiety encouraged by percieved threats rather than imminent danger."
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Possible causes"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_below="@id/textView4" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="25dp"
            android:text="--> Genetics (can be inherited from parents)"
            android:textSize="12sp"
            android:layout_below="@id/textView7" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView8"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="3dp"
            android:text="--> Environmental surroundings, personal as well as interpersonal issues."
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="How To Respond"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_below="@id/textView9" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="25dp"
            android:text="--> Exercises."
            android:textSize="12sp"
            android:layout_below="@id/textView10" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="25dp"
            android:text="--> Stress Management"
            android:textSize="12sp"
            android:layout_below="@id/textView11" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="25dp"
            android:text="--> Relaxation Techniques"
            android:textSize="12sp"
            android:layout_below="@id/textView12"/>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="25dp"
            android:text="--> Seeking support group"
            android:textSize="12sp"
            android:layout_below="@id/textView13" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="94dp"
            android:layout_height="143dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/anxiety4" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView14"
            android:background="#9ED8DD"
            android:text="I want to learn more!"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
